        <div>
            <div>{{ translate({ ident: "ERROR_MESSAGE_OXID_SHOP_ERROR" }) }}</div>
            <div>{{ translate({ ident: "MESSAGE_PLEASE_DELETE_FOLLOWING_DIRECTORY", suffix: "COLON" }) }} {{ oViewConf.getBaseDir() }}/setup!</div>
