    <div class="start-teaser">
        <div class="container-fluid">
            <div class="row g-0">
                <div class="col-lg-6">
                    <div class="card text-white todo big-tile zoom-in">
                        <picture>
                            <source srcset="{{ oViewConf.getImageUrl('content/Sportscar.webp') }}" media="(min-width: 768px)" type="image/webp">
                            <img src="{{ oViewConf.getImageUrl('content/Sportscar-sm.webp') }}" class="card-img card-img-full" alt="Sportscar" width="900" height="900">
