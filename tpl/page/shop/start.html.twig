    {% block start_newest_articles %}
        {% set showNewest = oViewConf.getViewThemeParam('sShowNewestArticles') %}
        {% if showNewest %}
            {% set oNewestArticles = oView.getNewestArticles() %}
            {% set newestWidth = oViewConf.getViewThemeParam('sNewestWidth') %}
            <div class="article-slider">
                {% if oNewestArticles and oNewestArticles.count() %}
                    {% include "widget/product/list-slider.html.twig" with {head: "START_NEWEST_HEADER"|translate, subhead: "START_NEWEST_SUBHEADER"|translate, listId: "newItems", products: oNewestArticles, rsslink: rsslinks.newestArticles, rssId: "rssNewestProducts", showMainLink: true, iProductsPerLine: 4} %}
                {% endif %}
            </div>
        {% endif %}
    {% endblock %}

    {% block start_top_articles %}
        {% set showTop = oViewConf.getViewThemeParam('sShowTopArticles') %}
        {% if showTop %}
            {% set topWidth = oViewConf.getViewThemeParam('sTopWidth') %}
            {% set oTopArticles = oView.getTop5ArticleList() %}
            <div class="article-slider">
                {% if oTopArticles and oTopArticles.count() %}
                    {% include "widget/product/list-slider.html.twig" with {head: "START_TOP_PRODUCTS_HEADER"|translate, subhead: "START_TOP_PRODUCTS_SUBHEADER"|translate(oTopArticles.count()), listId: "topBox", products: oTopArticles, rsslink: rsslinks.topArticles, rssId: "rssTopProducts", showMainLink: true, iProductsPerLine: 2} %}
                {% endif %}
            </div>
        {% endif %}
    {% endblock %}

    {% block start_bargain_articles %}
        {% set showBargain = oViewConf.getViewThemeParam('sShowBargainArticles') %}
        {% if showBargain %}
            {% set oBargainArticles = oView.getBargainArticleList() %}
            {% set bargainWidth = oViewConf.getViewThemeParam('sBargainWidth') %}
            <div class="article-slider">
                {% if oBargainArticles and oBargainArticles.count() %}
                    {% include "widget/product/list-slider.html.twig" with {head: "START_BARGAIN_HEADER"|translate, subhead: "START_BARGAIN_SUBHEADER"|translate, listId: "bargainItems", products: oBargainArticles, rsslink: rsslinks.bargainArticles, rssId: "rssBargainProducts", showMainLink: true, iProductsPerLine: 4} %}
                {% endif %}
            </div>
        {% endif %}
    {% endblock %}

    {% block start_manufacturer_slider %}
        {% if oViewConf.getViewThemeParam('bl_showManufacturer') %}
            {% include "widget/manufacturer.html.twig" %}
        {% endif %}
    {% endblock %}
{% endcapture %}
