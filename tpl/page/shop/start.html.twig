                                <img src="{{ oViewConf.getImageUrl('content/promo-sm.webp') }}" class="card-img card-img-half" alt="Promotion" width="460" height="580">
                            </picture>

                            <div class="card-img-overlay text-center">
                                <h5 class="card-title h2">Now in blue</h5>

                                <a href="#" class="btn btn-secondary mx-auto stretched-link">{{ translate({ ident: "WATCH_NOW" }) }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

