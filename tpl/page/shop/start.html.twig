                            <picture>
                                <source srcset="{{ oViewConf.getImageUrl('content/Mood.webp') }}" media="(min-width: 768px)" type="image/webp">
                                <img src="{{ oViewConf.getImageUrl('content/Mood-sm.webp') }}" class="card-img card-img-half" alt="Mood" width="900" height="450">
                            </picture>
                            <div class="card-img-overlay">
                                <h3 class="card-title">
                                    OX5 Family SUV
                                    <svg aria-hidden="true" class="d-lg-none">
                                        <use xlink:href="#right"></use>
                                    </svg>
                                </h3>
                                <p class="d-none d-md-block card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                                <span class="d-none d-md-block btn btn-secondary me-auto bg-todo">Watch now</span>
                            </div>
                            <a href="#" class="stretched-link" aria-label="Watch now"></a>
                        </div>

                        <div class="card text-white todo small-tile zoom-in">
                            <picture>
                                <source srcset="{{ oViewConf.getImageUrl('content/Transporter.webp') }}" media="(min-width: 768px)" type="image/webp">
                                <img src="{{ oViewConf.getImageUrl('content/Transporter-sm.webp') }}" class="card-img card-img-half" alt="Transporter" width="900" height="450">
                            </picture>
                            <div class="card-img-overlay">
                                <h2 class="card-title">
                                    OX3 Minibus
                                    <svg aria-hidden="true" class="d-lg-none">
                                        <use xlink:href="#right"></use>
                                    </svg>
                                </h2>
                                <p class="d-none d-md-block card-text">All you need for your business</p>
                                <span class="d-none d-md-block btn btn-secondary me-auto bg-todo">Watch now</span>
                            </div>
                            <a href="#" class="stretched-link" aria-label="Watch now"></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% if oViewConf.getViewThemeParam('showCategoryTiles') %}
        {% include "widget/categories.html.twig" %}
    {% endif %}

    <div class="container-xxl">
