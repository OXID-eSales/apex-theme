{% if in_list %}
    <a id="removeFromCompare{{ _compare_testid }}" class="btn btn-sm btn-light w-100 compare remove {{ _compare_class }}" data-aid="{{ _compare_aid }}" href="{{ seo_url({ ident: oViewConf.getSelfLink()|cat("cl=")|cat(oViewConf.getTopActiveClassName()), params: "am=1&amp;removecompare=1&amp;fnc=tocomparelist&amp;aid=" ~ _compare_aid ~ "&amp;anid=" ~ _compare_anid ~ "&amp;pgNr=" ~ _compare_page ~ oViewConf.getNavUrlParams() }) }}">{{ translate({ ident: _compare_text_from_id }) }}</a>
{% else %}
    <a id="addToCompare{{ _compare_testid }}" class="btn btn-sm btn-light w-100 compare add {{ _compare_class }}" data-aid="{{ _compare_aid }}" href="{{ seo_url({ ident: oViewConf.getSelfLink()|cat("cl=")|cat(oViewConf.getTopActiveClassName()), params: "am=1&amp;addcompare=1&amp;fnc=tocomparelist&aid=" ~ _compare_aid ~ "&amp;anid=" ~ _compare_anid ~ "&amp;pgNr=" ~ _compare_page ~ oViewConf.getNavUrlParams() }) }}">{{ translate({ ident: _compare_text_to_id }) }}</a>
{% endif %}
