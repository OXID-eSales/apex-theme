        <h3 class="underline">{{ translate({ ident: "PAYMENT_INFORMATION" }) }}</h3>
        <p>
            <b>{{ translate({ ident: "PAYMENT_METHOD" }) }} {{ payment.oxpayments__oxdesc.value }} {% if basket.getPaymentCosts() %}({{ basket.getFPaymentCosts() }} {{ currency.sign }}){% endif %}</b>
