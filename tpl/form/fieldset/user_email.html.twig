<div class="mb-3{% if aErrors.oxuser__oxusername %} is-invalid{% endif %}">
    <div class="form-floating">
        <input class="js-oxValidate js-oxValidate_notEmpty js-oxValidate_email oxValidate_enterPass oxValidate_enterPassTarget[oxValidate_pwd] form-control" placeholder=" " type="text" id="invadr[oxuser__oxusername]" name="invadr[oxuser__oxusername]" value="{% if isset( invadr.oxuser__oxusername ) %}{{ invadr.oxuser__oxusername }}{% else %}{{ oxcmp_user.oxuser__oxusername.value }}{% endif %}" size="37">
        <label for="invadr[oxuser__oxusername]" class="req">{{ translate({ ident: "EMAIL_ADDRESS" }) }}</label>
    </div>
    {% include "message/inputvalidation.html.twig" with {aErrors: aErrors.oxuser__oxusername} %}

        <div class="help-block"></div>
</div>

{% if oxcmp_user.oxuser__oxpassword.value %}
    <div class="oxValidate_pwd mb-3{% if aErrors.oxuser__oxpassword %} is-invalid{% endif %}"{% if not aErrors.oxuser__oxpassword %} style="display:none;"{% endif %}>
        <div class="form-floating">
            <input class="form-control" type="password" name="invadr[oxuser__oxpassword]" id="invadr[oxuser__oxpassword]" size="37">
            <label for="invadr[oxuser__oxpassword]" class="req">{{ translate({ ident: "PASSWORD" }) }}</label>
        </div>
        {% include "message/inputvalidation.html.twig" with {aErrors: aErrors.oxuser__oxpassword} %}
    </div>
{% endif %}
